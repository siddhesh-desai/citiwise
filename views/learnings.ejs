    <style>
      .title-header {
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
      }
      .content-container {
        max-width: 1147px;
        /* margin: auto; */
        background-color: #fff;
        border-radius: 12px;

        padding: 20px;
        border: 2px solid #c8ff16;
      }
      .content-container:hover {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      }
      .learning-topic {
        margin: 10px 0;
        padding: 15px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        background-color: #f9f9f9;
        transition: background-color 0.3s;
      }
      .learning-topic:hover {
        background-color: #e7f1ff;
        cursor: pointer;
      }
      .video-section {
        margin-top: 20px;
        background-color: #e9ecef;
        padding: 15px;
        border-radius: 8px;
      }
      .video-item {
        margin: 10px 0;
        padding: 10px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 8px;
      }
      .video-item a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
      }
      .video-item a:hover {
        text-decoration: underline;
      }
      .footer-text {
        margin-top: 20px;
        text-align: center;
        font-size: 12px;
        color: #666;
      }
    </style>
  </head>

  <body>
