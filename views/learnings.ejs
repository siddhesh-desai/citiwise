            </ul>
            <ul class="sidebar--bottom-items">
              <li>
                <a href="/api/logout">
                  <span class="icon icon-8" style="color: black;"
                    ><i class="ri-logout-box-r-line"></i
                  ></span>
                  <span class="sidebar--item">Logout</span>
                </a>
              </li>
            </ul>
          </div>
    
      <div class="main--content">
        <div class="content-container">
          <h1 class="title-header" style="font-size: 35px">
            Finance Learning Section
          </h1>
          <p style="font-size: 22px; margin-bottom: 2rem">
            Explore various finance topics through curated YouTube videos. Click
            on a topic to find recommended videos to enhance your knowledge!
          </p>

          <div class="topics-container">
            <h2 style="margin-bottom: 2rem">Available Topics</h2>
            <div class="learning-topic" onclick="showVideos('budgetingVideos')">
              Budgeting
            </div>
            <div class="learning-topic" onclick="showVideos('investingVideos')">
              Investing
            </div>
            <div class="learning-topic" onclick="showVideos('creditVideos')">
              Credit Management
            </div>
            <div class="learning-topic" onclick="showVideos('savingVideos')">
              Saving Strategies
            </div>
            <div
              class="learning-topic"
              onclick="showVideos('retirementVideos')"
            >
              Retirement Planning
            </div>
          </div>

          <div
            class="video-section"
            id="recommendedVideos"
            style="display: none"
          >
            <h2>Recommended Videos</h2>
            <div id="videoList"></div>
          </div>

          <div class="footer-text">&copy; 2024 @CitiWise</div>
        </div>

        <script>
          const videoTopics = {
            budgetingVideos: [
              {
                title: "How to Create a Budget",
                url: "https://www.youtube.com/watch?v=example1",
              },
              {
                title: "Budgeting Basics for Beginners",
                url: "https://www.youtube.com/watch?v=example2",
              },
            ],
            investingVideos: [
              {
                title: "Investing for Beginners",
                url: "https://www.youtube.com/watch?v=example3",
              },
              {
                title: "Understanding Stocks and Bonds",
                url: "https://www.youtube.com/watch?v=example4",
              },
            ],
            creditVideos: [
              {
                title: "Credit Management 101",
                url: "https://www.youtube.com/watch?v=example5",
              },
              {
                title: "How to Improve Your Credit Score",
                url: "https://www.youtube.com/watch?v=example6",
              },
            ],
            savingVideos: [
              {
                title: "Saving Strategies for Everyone",
                url: "https://www.youtube.com/watch?v=example7",
              },
              {
                title: "The Importance of Emergency Funds",
                url: "https://www.youtube.com/watch?v=example8",
              },
            ],
            retirementVideos: [
              {
                title: "Retirement Planning Basics",
                url: "https://www.youtube.com/watch?v=example9",
              },
              {
                title: "How Much Should You Save for Retirement?",
                url: "https://www.youtube.com/watch?v=example10",
              },
            ],
          };

          function showVideos(selectedTopic) {
            const videoSection = document.getElementById("recommendedVideos");
            const videoListContainer = document.getElementById("videoList");

            videoListContainer.innerHTML = ""; // Clear previous videos

            const selectedVideos = videoTopics[selectedTopic];

            if (selectedVideos) {
              selectedVideos.forEach((video) => {
                const videoItem = document.createElement("div");
                videoItem.classList.add("video-item");
                videoItem.innerHTML = `<a href="${video.url}" target="_blank">${video.title}</a>`;
                videoListContainer.appendChild(videoItem);
              });
            }

            videoSection.style.display = "block";
          }
        </script>
        <br />
        <br />
      </div>
    </section>
  </body>
</html>
